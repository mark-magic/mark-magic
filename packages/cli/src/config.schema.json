{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "generate": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/GenerateConfig"
      }
    }
  },
  "required": ["generate"],
  "additionalProperties": false,
  "additionalItems": false,
  "definitions": {
    "GenerateConfig": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "生成任务的名字"
        },
        "input": {
          "$ref": "#/definitions/InputPluginConfig"
        },
        "output": {
          "$ref": "#/definitions/OutputPluginConfig"
        }
      },
      "required": ["name", "input", "output"],
      "additionalProperties": false
    },
    "InputPluginConfig": {
      "anyOf": [{ "$ref": "#/definitions/LocalPluginConfig" }]
    },
    "OutputPluginConfig": {
      "anyOf": [
        { "$ref": "#/definitions/LocalPluginConfig" },
        { "$ref": "#/definitions/EpubPluginConfig" },
        { "$ref": "#/definitions/DocsPluginConfig" }
      ]
    },
    "LocalPluginConfig": {
      "type": "object",
      "description": "从本地目录读取或输出到本地目录",
      "properties": {
        "name": {
          "type": "string",
          "description": "插件名字",
          "enum": ["@mark-magic/plugin-local"]
        },
        "config": {
          "type": "object",
          "description": "插件配置",
          "properties": {
            "path": {
              "type": "string",
              "description": "本地目录的路径"
            }
          },
          "required": ["path"],
          "additionalProperties": false
        }
      },
      "required": ["name", "config"],
      "additionalProperties": false
    },
    "EpubPluginConfig": {
      "type": "object",
      "description": "输出为 epub",
      "properties": {
        "name": {
          "type": "string",
          "description": "插件名字",
          "enum": ["@mark-magic/plugin-epub"]
        },
        "config": {
          "type": "object",
          "description": "插件配置",
          "properties": {
            "path": {
              "type": "string",
              "description": "输出文件的路径"
            },
            "metadata": {
              "$schema": "http://json-schema.org/draft-07/schema#",
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "description": "书籍唯一标识"
                },
                "title": {
                  "type": "string",
                  "description": "书籍标题"
                },
                "creator": {
                  "type": "string",
                  "description": "作者"
                },
                "publisher": {
                  "type": "string",
                  "description": "发布者"
                },
                "language": {
                  "type": "string",
                  "description": "语言"
                },
                "cover": {
                  "type": "string",
                  "description": "封面图片"
                }
              },
              "required": ["id", "title", "creator", "publisher", "language"],
              "additionalProperties": false
            }
          },
          "required": ["path"],
          "additionalProperties": false
        }
      },
      "required": ["name", "config"],
      "additionalProperties": false
    },
    "DocsPluginConfig": {
      "type": "object",
      "description": "输出为文档网站",
      "properties": {
        "name": {
          "type": "string",
          "description": "插件名称",
          "enum": ["@mark-magic/plugin-docs"]
        },
        "config": {
          "$schema": "http://json-schema.org/draft-07/schema#",
          "type": "object",
          "properties": {
            "path": {
              "type": "string",
              "description": "输出文件的路径"
            },
            "public": {
              "type": "string",
              "description": "静态资源目录"
            },
            "name": {
              "type": "string"
            },
            "repo": {
              "type": "string"
            },
            "theme": {
              "type": "object",
              "properties": {
                "dark": {
                  "type": "boolean"
                }
              },
              "required": [],
              "additionalProperties": false
            },
            "giscus": {
              "type": "object",
              "properties": {
                "repo": {
                  "type": "string"
                },
                "repoId": {
                  "type": "string"
                },
                "category": {
                  "type": "string"
                },
                "categoryId": {
                  "type": "string"
                },
                "mapping": {
                  "type": "string"
                },
                "reactionsEnabled": {
                  "type": "string"
                },
                "emitMetadata": {
                  "type": "string"
                },
                "inputPosition": {
                  "type": "string"
                },
                "theme": {
                  "type": "string"
                },
                "lang": {
                  "type": "string"
                },
                "crossorigin": {
                  "type": "string"
                }
              },
              "required": [
                "repo",
                "repoId",
                "category",
                "categoryId",
                "mapping",
                "reactionsEnabled",
                "emitMetadata",
                "inputPosition",
                "theme",
                "lang",
                "crossorigin"
              ],
              "additionalProperties": false
            }
          },
          "required": ["path", "name", "repo", "theme"],
          "additionalItems": false,
          "additionalProperties": false
        }
      },
      "required": ["name", "config"],
      "additionalProperties": false
    },
    "BasePluginConfig": {
      "type": "object",
      "description": "插件配置",
      "properties": {
        "name": {
          "type": "string",
          "description": "插件名字"
        },
        "config": {
          "type": "object",
          "description": "插件配置"
        }
      },
      "required": ["name"],
      "additionalProperties": false
    }
  }
}
