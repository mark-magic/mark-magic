{
  "name": "@mark-magic/cli",
  "version": "0.11.2",
  "type": "module",
  "bin": {
    "mark-magic": "./bin.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "engines": {
    "node": ">=20"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "bin.js"
  ],
  "scripts": {
    "setup": "pnpm build && pnpm build-schema",
    "build": "vite build",
    "build-schema": "vite-node src/generate.ts && pnpm dts",
    "dev": "pnpm build --watch",
    "start": "vite-node src/bin.ts",
    "test": "vitest run",
    "dts": "json2ts -i ./dist/config.schema.json -o ./src/config.schema.ts"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@apidevtools/json-schema-ref-parser": "^10.1.0",
    "@liuli-util/test": "^3.7.0",
    "@liuli-util/vite-plugin-node": "^0.3.0",
    "@mark-magic/plugin-docs": "workspace:^",
    "@mark-magic/plugin-doctran": "workspace:^",
    "@mark-magic/plugin-epub": "workspace:^",
    "@mark-magic/plugin-local": "workspace:^",
    "@mark-magic/utils": "workspace:^",
    "@types/fs-extra": "^11.0.1",
    "@types/lodash-es": "^4.17.7",
    "@types/node": "^20.1.4",
    "json-schema-to-typescript": "^13.0.2",
    "typescript": "^5.0.4",
    "vite": "^4.3.9",
    "vite-node": "^0.32.0",
    "vitest": "^1.0.4"
  },
  "dependencies": {
    "@liuli-util/async": "^3.6.0",
    "@mark-magic/core": "workspace:^",
    "bundle-require": "^4.0.1",
    "commander": "^11.0.0",
    "compare-versions": "^6.1.0",
    "dotenv": "^16.3.1",
    "esbuild": "^0.18.7",
    "fs-extra": "^11.1.1",
    "lodash-es": "^4.17.21",
    "ora": "^7.0.1",
    "pathe": "^1.1.1",
    "pino": "^8.14.1",
    "pino-pretty": "^10.3.0",
    "yaml": "^2.3.4"
  }
}
