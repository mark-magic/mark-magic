{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "generate": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/GenerateConfig"
      }
    }
  },
  "required": ["generate"],
  "additionalProperties": false,
  "definitions": {
    "GenerateConfig": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "生成任务的名字"
        },
        "input": {
          "$ref": "#/definitions/InputPluginConfig"
        },
        "output": {
          "$ref": "#/definitions/OutputPluginConfig"
        }
      },
      "required": ["name", "input", "output"],
      "additionalProperties": false
    },
    "InputPluginConfig": {
      "anyOf": [{ "$ref": "#/definitions/LocalPluginConfig" }]
    },
    "OutputPluginConfig": {
      "anyOf": [
        { "$ref": "#/definitions/EpubPluginConfig" },
        { "$ref": "#/definitions/DocsPluginConfig" },
        { "$ref": "#/definitions/VitepressPluginConfig" }
      ]
    },
    "LocalPluginConfig": {
      "$ref": "../node_modules/@mark-magic/plugin-local/src/config.schema.json#/properties/input"
    },
    "EpubPluginConfig": {
      "$ref": "../node_modules/@mark-magic/plugin-epub/src/config.schema.json#/properties/output"
    },
    "DocsPluginConfig": {
      "$ref": "../node_modules/@mark-magic/plugin-docs/src/config.schema.json#/properties/output"
    },
    "VitepressPluginConfig": {
      "$ref": "../node_modules/@mark-magic/plugin-vitepress/src/config.schema.json#/properties/output"
    },
    "BasePluginConfig": {
      "type": "object",
      "description": "插件配置",
      "properties": {
        "name": {
          "type": "string",
          "description": "插件名字"
        },
        "config": {
          "type": "object",
          "description": "插件配置"
        }
      },
      "required": ["name"],
      "additionalProperties": false
    }
  }
}
