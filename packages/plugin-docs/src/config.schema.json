{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "output": {
      "type": "object",
      "description": "输出为网站",
      "properties": {
        "name": {
          "type": "string",
          "description": "插件名称",
          "enum": ["@mark-magic/plugin-docs"]
        },
        "config": {
          "$ref": "#/definitions/DocsOutputConfig"
        }
      },
      "required": ["name", "config"],
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "definitions": {
    "DocsOutputConfig": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "type": "object",
      "properties": {
        "path": {
          "type": "string",
          "description": "输出文件的路径"
        },
        "name": {
          "type": "string",
          "description": "网站名称"
        },
        "description": {
          "type": "string",
          "description": "网站名称"
        },
        "public": {
          "type": "string",
          "description": "静态资源目录"
        },
        "lang": {
          "type": "string",
          "description": "语言",
          "enum": ["en-US", "zh-CN"]
        },
        "nav": {
          "type": "array",
          "description": "导航栏",
          "items": {
            "anyOf": [
              {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string"
                  },
                  "link": {
                    "type": "string"
                  }
                },
                "required": ["text", "link"],
                "additionalProperties": false
              },
              {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string"
                  },
                  "items": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "text": {
                          "type": "string"
                        },
                        "link": {
                          "type": "string"
                        }
                      },
                      "required": ["text", "link"],
                      "additionalProperties": false
                    }
                  }
                },
                "required": ["text", "items"],
                "additionalProperties": false
              }
            ]
          }
        },
        "logo": {
          "description": "网站 logo",
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "object",
              "properties": {
                "light": {
                  "type": "string"
                },
                "dark": {
                  "type": "string"
                }
              },
              "required": ["light", "dark"],
              "additionalProperties": false
            }
          ]
        },
        "sitemap": {
          "type": "object",
          "properties": {
            "hostname": {
              "type": "string",
              "format": "uri"
            }
          },
          "required": ["hostname"],
          "additionalProperties": false
        },
        "rss": {
          "type": "object",
          "properties": {
            "hostname": {
              "type": "string",
              "format": "uri"
            },
            "copyright": {
              "type": "string"
            },
            "ignore": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": ["hostname", "copyright"],
          "additionalProperties": false
        },
        "giscus": {
          "type": "object",
          "properties": {
            "repo": {
              "type": "string"
            },
            "repoId": {
              "type": "string"
            },
            "category": {
              "type": "string"
            },
            "categoryId": {
              "type": "string"
            },
            "mapping": {
              "type": "string"
            },
            "reactionsEnabled": {
              "type": "string"
            },
            "emitMetadata": {
              "type": "string"
            },
            "inputPosition": {
              "type": "string"
            },
            "theme": {
              "type": "string"
            },
            "lang": {
              "type": "string"
            },
            "crossorigin": {
              "type": "string"
            }
          },
          "required": [
            "repo",
            "repoId",
            "category",
            "categoryId",
            "mapping",
            "reactionsEnabled",
            "emitMetadata",
            "inputPosition",
            "theme",
            "lang",
            "crossorigin"
          ],
          "additionalProperties": false
        },
        "gtag": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              },
              "additionalItems": false
            }
          ]
        }
      },
      "required": ["path", "name"],
      "additionalItems": false,
      "additionalProperties": false
    }
  }
}
