{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "output": {
      "type": "object",
      "description": "输出为 epub",
      "properties": {
        "name": {
          "type": "string",
          "description": "插件名字",
          "enum": ["@mark-magic/plugin-epub"]
        },
        "config": {
          "$ref": "#/definitions/EpubOutputConfig"
        }
      },
      "required": ["name", "config"],
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "definitions": {
    "EpubOutputConfig": {
      "type": "object",
      "description": "插件配置",
      "properties": {
        "path": {
          "type": "string",
          "description": "输出文件的路径"
        },
        "id": {
          "type": "string",
          "description": "书籍唯一标识"
        },
        "title": {
          "type": "string",
          "description": "书籍标题"
        },
        "creator": {
          "type": "string",
          "description": "作者"
        },
        "publisher": {
          "type": "string",
          "description": "发布者",
          "default": "mark-magic"
        },
        "language": {
          "type": "string",
          "description": "语言",
          "default": "en"
        },
        "cover": {
          "type": "string",
          "description": "封面图片"
        }
      },
      "required": ["path", "id", "title", "creator"],
      "additionalProperties": false
    }
  }
}
