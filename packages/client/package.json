{
  "name": "@mami/client",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main.js",
  "description": "cross-tool document converter",
  "author": {
    "name": "rxliuli",
    "email": "rxliuli@gmail.com",
    "url": "https://github.com/rxliuli"
  },
  "scripts": {
    "build-web": "pnpm --prefix ../web build && cp -rf ../web/dist ./dist/",
    "build-main": "tsx build.mts",
    "dev": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "mami.client",
    "productName": "mami",
    "asar": false,
    "files": [
      "./dist"
    ],
    "directories": {
      "output": "release/${version}"
    },
    "mac": {
      "category": "your.app.category.type"
    }
  },
  "devDependencies": {
    "electron": "21.3.0",
    "@mami/plugin-hexo": "workspace:^",
    "@mami/plugin-hugo": "workspace:^",
    "@mami/plugin-joplin": "workspace:^",
    "@mami/plugin-local": "workspace:^",
    "@mami/plugin-obsidian": "workspace:^",
    "@mami/plugin-raw": "workspace:^",
    "@mami/server": "workspace:^",
    "@types/node": "^18.8.3",
    "electron-builder": "^23.6.0",
    "esbuild": "^0.15.10",
    "get-port": "^6.1.2",
    "tsx": "^3.12.1",
    "typescript": "^4.9.3"
  }
}
