{
  "name": "@mami/all",
  "private": true,
  "license": "MIT",
  "scripts": {
    "postinstall": "npx simple-git-hooks",
    "setup-all": "turbo run setup",
    "test-all": "turbo run test",
    "clean-all": "pnpx rimraf **/node_modules **/dist",
    "docs-build": "typedoc --options typedoc.json",
    "docs-deploy": "gh-pages -d docs -e /api --add"
  },
  "prettier": "@liuli-util/prettier-standard-config",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,md,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.25.0",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@liuli-util/prettier-standard-config": "^0.3.0",
    "gh-pages": "^4.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.1",
    "simple-git-hooks": "^2.8.0",
    "turbo": "^1.6.3",
    "typedoc": "^0.23.21",
    "typedoc-plugin-resolve-crossmodule-references": "^0.3.2",
    "typescript": "4.8.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "pnpm commitlint --edit $1"
  }
}
